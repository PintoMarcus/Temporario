
-- comando para gerar o password hash 
SELECT LOGINPROPERTY('seu-login','PASSWORDHASH');


/*********************************************************************************/



/**********************************************************************************/

-- comando para gerar o SID hash 
USE meu-banco 
GO 
SELECT name, sid FROM sys.sysusers 
WHERE name = 'meu-user' 
GO 
USE MASTER 
GO 
SELECT name, sid FROM sys.sql_logins WHERE name = 'meu-login' 
GO

/**********************************************************************************/


